# 빌드 스테이지
FROM node:20-alpine AS builder

WORKDIR /app

# 의존성 파일 먼저 복사 (캐시 최적화)
COPY package*.json ./

RUN npm ci

COPY . .

RUN npm run build

# 프로덕션 스테이지
FROM node:20-alpine AS production

WORKDIR /app

COPY package*.json ./

# 프로덕션 의존성만 설치
RUN npm ci --omit=dev

# 빌드 결과물 복사
COPY --from=builder /app/dist ./dist

USER node

EXPOSE 3001

CMD ["npm", "run", "start:prod"]